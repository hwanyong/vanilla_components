{
  "name": "@csdriveninsight/ui",
  "version": "1.0.0",
  "description": "Vanilla JS UI Components inspired by NextUI and shadcn/ui",
  "type": "module",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "clean": "rm -rf dist/*",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,json,md}'",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepare": "husky",
    "release": "pnpm run build && changeset publish",
    "analyze": "ANALYZE=true pnpm run build",
    "analyze:cdn": "ANALYZE=true ANALYZE_TARGET=cdn pnpm run build",
    "analyze:esm": "ANALYZE=true ANALYZE_TARGET=esm pnpm run build"
  },
  "keywords": [
    "ui",
    "components",
    "vanilla-js",
    "web-components",
    "typescript"
  ],
  "author": "Hwanyong Yoo",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@lhci/cli": "^0.14.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@testing-library/dom": "^10.4.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "happy-dom": "^16.5.3",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "puppeteer": "^24.0.0",
    "rollup": "^4.30.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
